{
  "manifest_version": 3,
  "name": "Yout-ube Player",
  "version": "1.6",
  "description": "Official client for yout-ube.com â€” watch YouTube videos ad-free, on loop, and distraction-free. Powered by yout-ube.com.",
  "permissions": ["activeTab", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://yout-ube.com/*",
        "https://www.youtube-nocookie.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "32": "main-icon.png",
    "128": "main-icon.png"
  }
}
